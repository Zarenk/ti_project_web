# Database Configuration
# IMPORTANTE: Usar una contraseña fuerte en producción (mínimo 16 caracteres, mayúsculas, minúsculas, números y símbolos)
DATABASE_URL="postgresql://usuario:tu_password_segura_aqui@localhost:5432/nombre_db?schema=public"

# JWT Secret (Generar con: openssl rand -base64 64)
# CRÍTICO: Debe ser diferente en cada entorno y nunca compartirse
JWT_SECRET='tu_jwt_secret_muy_largo_y_aleatorio_aqui'

# CORS Origins (URLs permitidas para hacer requests al backend)
CORS_ORIGIN=http://localhost:3000

# SUNAT Credentials (Perú - Facturación Electrónica)
# Obtener de: https://www.sunat.gob.pe/
SUNAT_CLIENT_ID=tu_client_id_de_sunat
SUNAT_CLIENT_SECRET=tu_client_secret_de_sunat
SUNAT_USERNAME=tu_ruc_y_usuario
SUNAT_PASSWORD=tu_password_sunat_segura
SUNAT_GEM_ENDPOINT=https://api-cpe.sunat.gob.pe/v1/contribuyente/gem
SUNAT_USE_JAVA_SIGNER=true
SUNAT_GRE_PDF_TEMPLATE=

# Public URL (Dominio o IP donde está desplegado el backend)
PUBLIC_URL=http://localhost:4000

# Culqi Payment Gateway (Opcional)
CULQI_SECRET_KEY=
CULQI_PUBLIC_KEY=

# SMTP Configuration (Para envío de emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_app_password_de_gmail
CONTACT_EMAIL=tu_email_de_contacto@gmail.com

# APIs Peru (Consulta DNI/RUC)
APISPERU_TOKEN=tu_token_de_apisperu
APISPERU_BASE_URL=https://dniruc.apisperu.com/api/v1

# Admin por Defecto (Primera configuración)
# IMPORTANTE: Cambiar inmediatamente después del primer login
DEFAULT_ADMIN_EMAIL=admin@tu-empresa.com
DEFAULT_ADMIN_PASSWORD=CambiarInmediatamente123!
DEFAULT_ADMIN_USERNAME=admin

# Telemetry & Monitoring
HF_HUB_ENABLE_SYMLINKS=0
OTEL_TRACES_EXPORTER=none
OTEL_METRICS_EXPORTER=none
OTEL_LOG_LEVEL=error
OTEL_SAMPLER=parentbased_traceidratio
OTEL_SAMPLER_ARG=0.0
DISABLE_TELEMETRY=true

# Default Trial Plan
DEFAULT_TRIAL_PLAN_CODE=trial

# reCAPTCHA (Google)
# Obtener en: https://www.google.com/recaptcha/admin
RECAPTCHA_SECRET_KEY=tu_recaptcha_secret_key

# MercadoPago (Pasarela de pagos)
# Obtener en: https://www.mercadopago.com.pe/developers/
MERCADOPAGO_PUBLIC_KEY=tu_public_key_de_mercadopago
MERCADOPAGO_ACCESS_TOKEN=tu_access_token_de_mercadopago
